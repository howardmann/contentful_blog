{{#if tag}}
  <h3>{{tag}}</h3>
{{/if}}

{{#each items}}
  <h3>
    <a href="/{{fields.slug}}"> {{fields.title}} </a>
  </h3>
  <p>
    {{dateFormat sys.createdAt}} |
    {{readTime fields.body}}
  </p>
  <p>
    {{#each fields.tags as |tag|}}
      {{> tag-single tag=tag}}
    {{/each}}
  </p>
  <p>
    {{fields.description}}
  </p>
  <hr>
{{/each}}
